<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.component.PortPinDesignator" 
         table="port_pin_designator" mutable="true">
    
    <id name="id" column="port_pin_designator_id" type="long">
      <generator class="native">
        <param name="sequence">seq_port_pin_designator</param>
      </generator>
    </id>

    <version name="version" column="version"/>

    <many-to-one name="componentPortType" column="component_port_type_id" 
                 class="gov.anl.aps.irmis.persistence.component.ComponentPortType" 
                 not-null="true"/>

    <property name="designatorOrder" column="designator_order" type="integer"/>
    <property name="designator" column="designator" type="string"/>
    <property name="markForDelete" column="mark_for_delete" type="boolean"/>
  </class>
  
</hibernate-mapping>
