<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.component.ComponentPortType" 
         table="component_port_type" mutable="true">
    
    <id name="id" column="component_port_type_id" type="long">
      <generator class="native">
        <param name="sequence">seq_component_port_type</param>
      </generator>
    </id>

    <version name="version" column="version"/>

    <list name="portPinDesignators" inverse="true" cascade="all" lazy="true">
      <key column="component_port_type_id"/>
      <index column="designator_order"/>
      <one-to-many 
          class="gov.anl.aps.irmis.persistence.component.PortPinDesignator"/>
    </list>    

    <property name="componentPortType" column="component_port_type" type="string"/>
    <property name="componentPortGroup" column="component_port_group" type="string"/>
    <property name="componentPortPinCount" column="component_port_pin_count" type="integer"/>
    <property name="markForDelete" column="mark_for_delete" type="boolean"/>
  </class>
  
</hibernate-mapping>
