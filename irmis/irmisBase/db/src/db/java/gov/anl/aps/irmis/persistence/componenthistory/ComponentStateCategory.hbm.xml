<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.componenthistory.ComponentStateCategory" 
         table="component_state_category" lazy="true" mutable="true">
    
    <id name="id" column="component_state_category_id" type="long">
      <generator class="native">
        <param name="sequence">seq_component_state_category</param>
      </generator>
    </id>

    <set name="componentStates" inverse="true" cascade="all-delete-orphan" lazy="false">
      <key column="component_state_category_id"/>
      <one-to-many 
          class="gov.anl.aps.irmis.persistence.componenthistory.ComponentState"/>
    </set>

    <property name="category" type="string" column="category"/>

  </class>
  
</hibernate-mapping>
