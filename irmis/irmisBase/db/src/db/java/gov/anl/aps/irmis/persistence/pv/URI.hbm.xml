<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.pv.URI" 
         table="uri" mutable="true">
    
    <id name="id" column="uri_id" type="long">
      <generator class="native">
        <param name="sequence">seq_uri</param>
      </generator>
    </id>

    <property name="uri" type="string" column="uri"/>
    <property name="uriModifiedDate" type="timestamp" column="uri_modified_date"/>
    <property name="modifiedDate" type="timestamp" column="modified_date"/>
    <property name="modifiedBy" type="string" column="modified_by"/>
  </class>
  
</hibernate-mapping>
