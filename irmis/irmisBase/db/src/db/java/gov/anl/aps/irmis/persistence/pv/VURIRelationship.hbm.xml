<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.pv.VURIRelationship" 
         table="vuri_rel" lazy="true" mutable="false">
    
    <id name="id" column="vuri_rel_id" type="long">
      <generator class="native">
        <param name="sequence">seq_vuri_rel</param>
      </generator>
    </id>

    <many-to-one name="parentVuri" column="parent_vuri_id" 
                 class="gov.anl.aps.irmis.persistence.pv.VURI" 
                 not-null="true"/>

    <many-to-one name="childVuri" column="child_vuri_id" 
                 class="gov.anl.aps.irmis.persistence.pv.VURI" 
                 not-null="true"/>

    <property name="relationshipInfo" type="string" column="rel_info"/>
  </class>
  
</hibernate-mapping>
