<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.component.ComponentPortTemplate" 
         table="component_port_template" mutable="true">
    
    <id name="id" column="component_port_template_id" type="long">
      <generator class="native">
        <param name="sequence">seq_component_port_template</param>
      </generator>
    </id>

    <version name="version" column="version"/>

    <many-to-one name="componentType" column="component_type_id" 
                 class="gov.anl.aps.irmis.persistence.component.ComponentType" 
                 not-null="true"/>

    <many-to-one name="componentPortType" column="component_port_type_id" 
                 class="gov.anl.aps.irmis.persistence.component.ComponentPortType" 
                 not-null="true"/>

    <set name="portPinTemplates" inverse="true" cascade="all" lazy="true" sort="natural">
      <key column="component_port_template_id"/>
      <one-to-many 
          class="gov.anl.aps.irmis.persistence.component.PortPinTemplate"/>
    </set>

    <property name="componentPortName" column="component_port_name" type="string"/>
    <property name="componentPortOrder" column="component_port_order" type="integer"/>
    <property name="markForDelete" column="mark_for_delete" type="boolean"/>
  </class>
  
</hibernate-mapping>
