<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.component.PortPin" 
         table="port_pin" mutable="true">
    
    <id name="id" column="port_pin_id" type="long">
      <generator class="native">
        <param name="sequence">seq_port_pin</param>
      </generator>
    </id>

    <version name="version" column="version"/>

    <many-to-one name="componentPort" column="component_port_id" 
                 class="gov.anl.aps.irmis.persistence.component.ComponentPort" 
                 not-null="true"/>

    <many-to-one name="portPinType" column="port_pin_type_id" 
                 class="gov.anl.aps.irmis.persistence.component.PortPinType" />

    <many-to-one name="portPinDesignator" column="port_pin_designator_id" 
                 class="gov.anl.aps.irmis.persistence.component.PortPinDesignator" 
                 not-null="true"/>

    <property name="portPinUsage" column="port_pin_usage" type="string"/>    
    <property name="signalName" column="signal_name" type="string"/>    
    <property name="markForDelete" column="mark_for_delete" type="boolean"/>    
  </class>
  
</hibernate-mapping>

