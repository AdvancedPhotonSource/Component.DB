<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.pv.IOCResource" 
         table="ioc_resource" lazy="true" mutable="false">
    
    <id name="id" column="ioc_resource_id" type="long">
      <generator class="native">
        <param name="sequence">seq_ioc_resource</param>
      </generator>
    </id>

    <many-to-one name="iocBoot" column="ioc_boot_id" 
                 class="gov.anl.aps.irmis.persistence.pv.IOCBoot" 
                 not-null="true"/>

    <many-to-one name="uri" column="uri_id"
                 class="gov.anl.aps.irmis.persistence.pv.URI"
                 cascade="all"/>

    <property name="loadOrder" type="integer" column="load_order"/>
    <property name="substStr" type="string" column="subst_str"/>
  </class>
  
</hibernate-mapping>
