<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.audit.AuditAction" 
         table="audit_action" mutable="true">
    
    <id name="id" column="audit_action_id" type="long">
      <generator class="native">
        <param name="sequence">seq_audit_action</param>
      </generator>
    </id>

    <many-to-one name="actionType"
                 class="gov.anl.aps.irmis.persistence.audit.AuditActionType"
                 column="audit_action_type_id"
                 cascade="save-update"/>

    <many-to-one name="person"
                 class="gov.anl.aps.irmis.persistence.login.Person"
                 column="person_id"
                 cascade="save-update"/>
    
    <property name="actionKey" column="action_key" type="long"/>
    <property name="actionDescription" column="action_desc" type="string"/>
    <property name="actionDate" column="action_date" type="timestamp"/>

  </class>
  
</hibernate-mapping>
