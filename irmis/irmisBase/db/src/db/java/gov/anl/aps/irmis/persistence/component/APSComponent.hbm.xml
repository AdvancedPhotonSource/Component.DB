<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.component.APSComponent" 
         table="aps_component" mutable="true" lazy="false">
    
    <id name="id" column="aps_component_id" type="long">
      <generator class="native">
        <param name="sequence">seq_aps_component</param>
      </generator>
    </id>

    <version name="version" column="version"/>

    <many-to-one name="groupName" column="group_name_id" 
                 class="gov.anl.aps.irmis.persistence.login.GroupName" 
                 fetch="join"/>

    <many-to-one name="component" column="component_id" 
                 class="gov.anl.aps.irmis.persistence.component.Component" 
                 unique="true" not-null="true"/>

    <property name="serialNumber" column="serial_number" type="string"/>
    <property name="verified" column="verified" type="boolean"/>
    <property name="markForDelete" column="mark_for_delete" type="boolean"/>
  </class>
  
</hibernate-mapping>
