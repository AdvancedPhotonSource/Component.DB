<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.login.Person" 
         table="person" mutable="true">
    
    <id name="id" column="person_id" type="long">
      <generator class="native">
        <param name="sequence">seq_person</param>
      </generator>
    </id>

    <set name="roles" inverse="true" cascade="all-delete-orphan" lazy="false">
      <key column="person_id"/>
      <one-to-many 
          class="gov.anl.aps.irmis.persistence.login.Role"/>
    </set>
    
    <property name="userid" column="userid" type="string"/>
    <property name="firstName" column="first_nm" type="string"/>
    <property name="middleName" column="middle_nm" type="string"/>
    <property name="lastName" column="last_nm" type="string"/>

  </class>
  
</hibernate-mapping>
