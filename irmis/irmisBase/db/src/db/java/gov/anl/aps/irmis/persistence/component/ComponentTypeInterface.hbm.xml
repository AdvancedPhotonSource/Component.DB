<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.component.ComponentTypeInterface" 
         table="component_type_if" mutable="true">
    
    <id name="id" column="component_type_if_id" type="long">
      <generator class="native">
        <param name="sequence">seq_component_type_if</param>
      </generator>
    </id>

    <version name="version" column="version"/>

    <many-to-one name="interfaceType" column="component_type_if_type_id" 
                 class="gov.anl.aps.irmis.persistence.component.ComponentTypeInterfaceType" 
                 not-null="true"/>

    <many-to-one name="relationshipType" column="component_rel_type_id" 
                 class="gov.anl.aps.irmis.persistence.component.ComponentRelationshipType" 
                 not-null="true"/>

    <many-to-one name="componentType" column="component_type_id" 
                 class="gov.anl.aps.irmis.persistence.component.ComponentType" 
                 not-null="true"/>

    <property name="required" column="required" type="boolean"/>
    <property name="presented" column="presented" type="boolean"/>
    <property name="maxChildren" column="max_children" type="integer"/>
    <property name="markForDelete" column="mark_for_delete" type="boolean"/>
  </class>
  
</hibernate-mapping>
