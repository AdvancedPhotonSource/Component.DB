<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.component.ComponentTypePerson" 
         table="component_type_person" mutable="true">
    
    <id name="id" column="component_type_person_id" type="long">
      <generator class="native">
        <param name="sequence">seq_component_type_person</param>
      </generator>
    </id>

    <version name="version" column="version"/>

    <many-to-one name="componentType" column="component_type_id" 
                 class="gov.anl.aps.irmis.persistence.component.ComponentType" 
                 not-null="true"/>

    <many-to-one name="person" column="person_id" 
                 class="gov.anl.aps.irmis.persistence.login.Person" 
                 not-null="true"/>

    <many-to-one name="roleName" column="role_name_id" 
                 class="gov.anl.aps.irmis.persistence.login.RoleName" 
                 not-null="true"/>

    <property name="markForDelete" column="mark_for_delete" type="boolean"/>

  </class>
  
</hibernate-mapping>
