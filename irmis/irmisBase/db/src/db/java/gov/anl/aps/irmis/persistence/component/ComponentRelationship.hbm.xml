<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.component.ComponentRelationship" 
         table="component_rel" mutable="true">
    
    <id name="id" column="component_rel_id" type="long">
      <generator class="native">
        <param name="sequence">seq_component_rel</param>
      </generator>
    </id>

    <version name="version" column="version"/>

    <many-to-one name="parentComponent" column="parent_component_id" cascade="none"
                 class="gov.anl.aps.irmis.persistence.component.Component" 
                 not-null="true"/>

    <many-to-one name="childComponent" column="child_component_id" cascade="all"
                 class="gov.anl.aps.irmis.persistence.component.Component" 
                 not-null="false"/>

    <many-to-one name="relationshipType" column="component_rel_type_id" cascade="none"
                 class="gov.anl.aps.irmis.persistence.component.ComponentRelationshipType" 
                 not-null="true"/>

    <many-to-one name="verifiedPerson" column="verified_person_id" 
                 class="gov.anl.aps.irmis.persistence.login.Person" 
                 not-null="false"/>

    <property name="logicalOrder" column="logical_order" type="integer"/>
    <property name="logicalDescription" column="logical_desc" type="string"/>
    <property name="markForDelete" column="mark_for_delete" type="boolean"/>    
  </class>
  
</hibernate-mapping>
