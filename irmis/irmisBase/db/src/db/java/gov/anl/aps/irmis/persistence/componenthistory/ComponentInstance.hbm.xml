<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.componenthistory.ComponentInstance" 
         table="component_instance" lazy="true" mutable="true">
    
    <id name="id" column="component_instance_id" type="long">
      <generator class="native">
        <param name="sequence">seq_component_instance</param>
      </generator>
    </id>

    <version name="version" column="version"/>

    <set name="componentInstanceStates" inverse="true" cascade="all-delete-orphan" lazy="false">
      <key column="component_instance_id"/>
      <one-to-many 
          class="gov.anl.aps.irmis.persistence.componenthistory.ComponentInstanceState"/>
    </set>

    <many-to-one name="componentType" column="component_type_id" 
                 class="gov.anl.aps.irmis.persistence.component.ComponentType" 
                 not-null="true" />

    <many-to-one name="component" column="component_id" 
                 class="gov.anl.aps.irmis.persistence.component.Component" 
                 unique="true" not-null="false"/>

    <property name="serialNumber" type="string" column="serial_number"/>

  </class>
  
</hibernate-mapping>
