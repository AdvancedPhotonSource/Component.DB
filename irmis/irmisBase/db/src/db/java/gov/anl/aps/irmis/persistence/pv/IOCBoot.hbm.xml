<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.pv.IOCBoot" 
         table="ioc_boot" lazy="true" mutable="false">
    
    <id name="id" column="ioc_boot_id" type="long">
      <generator class="native">
        <param name="sequence">seq_ioc_boot</param>
      </generator>
    </id>

    <many-to-one name="ioc"
                 class="gov.anl.aps.irmis.persistence.pv.IOC"
                 column="ioc_id"
                 cascade="save-update"/>

    <set name="iocResources" inverse="true" cascade="all" lazy="true">
      <key column="ioc_boot_id"/>
      <one-to-many 
          class="gov.anl.aps.irmis.persistence.pv.IOCResource"/>
    </set>

    <set name="recordTypes" inverse="true" cascade="all" lazy="true">
      <key column="ioc_boot_id"/>
      <one-to-many 
          class="gov.anl.aps.irmis.persistence.pv.RecordType"/>
    </set>

    <set name="records" inverse="true" cascade="all" lazy="true">
      <key column="ioc_boot_id"/>
      <one-to-many 
          class="gov.anl.aps.irmis.persistence.pv.Record"/>
    </set>

    <property name="sysBootLine" type="string" column="sys_boot_line"/>
    <property name="iocBootDate" type="timestamp" column="ioc_boot_date"/>
    <property name="currentLoad" type="boolean" column="current_load"/>
    <property name="currentBoot" type="boolean" column="current_boot"/>
    <property name="modifiedDate" type="timestamp" column="modified_date"/>
    <property name="modifiedBy" type="string" column="modified_by"/>
  </class>
  
</hibernate-mapping>
