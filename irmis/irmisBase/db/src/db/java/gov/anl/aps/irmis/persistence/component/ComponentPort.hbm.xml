<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.component.ComponentPort" 
         table="component_port" mutable="true">
    
    <id name="id" column="component_port_id" type="long">
      <generator class="native">
        <param name="sequence">seq_component_port</param>
      </generator>
    </id>

    <version name="version" column="version"/>

    <many-to-one name="component" column="component_id" 
                 class="gov.anl.aps.irmis.persistence.component.Component" 
                 not-null="true"/>

    <many-to-one name="componentPortType" column="component_port_type_id" 
                 class="gov.anl.aps.irmis.persistence.component.ComponentPortType" 
                 not-null="true"/>

    <bag name="cablesA" cascade="none" lazy="true"
          where="mark_for_delete=0">
      <key column="component_port_a_id"/>
      <one-to-many 
          class="gov.anl.aps.irmis.persistence.component.Cable"/>
    </bag>

    <bag name="cablesB" cascade="none" lazy="true"
          where="mark_for_delete=0">
      <key column="component_port_b_id"/>
      <one-to-many 
          class="gov.anl.aps.irmis.persistence.component.Cable"/>
    </bag>

    <set name="portPins" inverse="true" cascade="all" lazy="true" sort="natural">
      <key column="component_port_id"/>
      <one-to-many 
          class="gov.anl.aps.irmis.persistence.component.PortPin"/>
    </set>

    <property name="componentPortName" column="component_port_name" type="string"/>
    <property name="componentPortOrder" column="component_port_order" type="integer"/>
    <property name="markForDelete" column="mark_for_delete" type="boolean"/>
  </class>
  
</hibernate-mapping>
