<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.anl.aps.irmis.persistence.pv.Record" 
         table="rec" lazy="true" mutable="false">
    
    <id name="id" column="rec_id" type="long">
      <generator class="native">
        <param name="sequence">seq_rec</param>
      </generator>
    </id>

    <many-to-one name="iocBoot" column="ioc_boot_id" 
                 class="gov.anl.aps.irmis.persistence.pv.IOCBoot" 
                 not-null="true"/>

    <many-to-one name="recordType" column="rec_type_id" 
                 class="gov.anl.aps.irmis.persistence.pv.RecordType" 
                 not-null="true"/>

    <set name="fields" sort="gov.anl.aps.irmis.persistence.pv.FieldComparator"
         inverse="true" cascade="none" lazy="true">
      <key column="rec_id"/>
      <one-to-many 
          class="gov.anl.aps.irmis.persistence.pv.Field"/>
    </set>

    <property name="recordName" type="string" column="rec_nm"/>
  </class>
  
</hibernate-mapping>
