<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
       <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss,SSS} %t %-5level %c{1} - %msg"/>
    </Console>
  </Appenders>
  <Loggers>
     <Root level="debug">
        <AppenderRef ref="Console"/>
     </Root>   
  </Loggers>
</Configuration>